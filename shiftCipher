#include<iostream>
int main(){
    printf("Enter the string");
    char str[256],str2[256];
    int i=0;
    scanf("%s",str);
    while(str[i]!='\0'){
     
            str[i] = str[i] + 3;   
        i++;
    }
    
    i=0;int j=0;
    printf("\n");
    while(str[i]!='\0'){
         str2[j] = str[i] - 3;
        printf("%c %d %c \n",str2[j],str[i],str[i]);
      //  printf("%c",str[i]);
        i++;j++;
    }
}
